{
    "extends": "stylelint-config-standard",
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "apply",
                    "responsive",
                    "screen",
                    "tailwind",
                    "variants"
                ]
            }
        ],
        "block-opening-brace-newline-before": [
            "always-multi-line"
        ],
        "block-opening-brace-space-before": [
            "always-single-line"
        ],
        "indentation": [
            4
        ]
    }
}