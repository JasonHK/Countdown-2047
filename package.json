{
  "name": "countdown-2047",
  "description": "Countdown from now to July 1st 2047, the day when hong kong totally vanished.",
  "version": "2019.10.28",
  "license": "Unlicense",
  "private": true,
  "author": "Jason Kwok <me@jasonhk.net> (https://jasonhk.net)",
  "homepage": "https://github.com/JasonHK/Countdown-2047#readme",
  "keywords": [
    "countdown"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JasonHK/Countdown-2047.git"
  },
  "bugs": {
    "url": "https://github.com/JasonHK/Countdown-2047/issues"
  },
  "scripts": {
    "start": "npx ws --port 2047 --directory dist --open",
    "start:dev": "npx webpack-dev-server",
    "watch": "npx npm-watch",
    "build": "npm run build:dev",
    "build:dev": "npx webpack --mode development",
    "build:prod": "npx webpack --mode production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "npm run build:prod",
    "deploy:gh-pages": "npm run deploy:gh-pages:split && npm run deploy:gh-pages:merge && npm run deploy:gh-pages:push",
    "deploy:gh-pages:clear": "git checkout gh-pages && git branch --delete gh-pages-temp && git checkout master",
    "deploy:gh-pages:merge": "git checkout gh-pages && git merge --commit --strategy=recursive --strategy-option=theirs --message=\"Deploy Countdown-2047 to GitHub Pages\" gh-pages-temp && git checkout master",
    "deploy:gh-pages:push": "git checkout gh-pages && git push && git checkout master",
    "deploy:gh-pages:split": "git subtree split --prefix dist --branch gh-pages-temp"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/workbox-sw": "^4.2.1",
    "autoprefixer": "^9.6.4",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "file-loader": "^4.2.0",
    "local-web-server": "^3.0.7",
    "mini-css-extract-plugin": "^0.8.0",
    "moment-mini": "^2.22.1",
    "node-sass": "^4.12.0",
    "node-snackbar": "^0.1.16",
    "postcss-loader": "^3.0.0",
    "resolve-url-loader": "^3.1.0",
    "sass-loader": "^8.0.0",
    "source-map-loader": "^0.2.4",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-scss": "^3.11.1",
    "suitcss-base": "^5.0.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2",
    "workbox-routing": "^4.3.1"
  }
}
