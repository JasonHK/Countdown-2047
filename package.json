  "scripts": {
    "start": "npm run build:prod && npx ws --port 2047 --directory dist --open",
    "start:dev": "npx webpack-dev-server --config ./configs/webpack.config.ts",
    "start:watch": "npm run start:dev -- --env.watch",
    "test": "npx jest --config=./configs/jest.config.json",
    "test:coverage": "npm run clean:coverage && npm run test -- --coverage",
    "build": "npm run build:deploy",
    "build:dev": "npx webpack --config ./configs/webpack.config.ts",
    "build:watch": "npm run build:dev -- --env.watch",
    "build:prod": "npm run build:dev -- --env.production",
    "build:deploy": "npx run-s -ln clean:build build:prod",
    "clean": "npx run-s -ln clean:*",
    "clean:coverage": "npx rimraf -- ./coverage",
    "clean:build": "npx rimraf -- ./dist"
  },
