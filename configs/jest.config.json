{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "../",
    "collectCoverageFrom": [
        "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
        "html",
        "lcov"
    ],
    "projects": [
        {
            "displayName": "test:2047",
            "rootDir": ".",
            "roots": [
                "<rootDir>"
            ],
            "modulePaths": [
                "<rootDir>"
            ],
            "transform": {
                "^.+\\.ts$": "ts-jest"
            },
            "testPathIgnorePatterns": [
                "/node_modules/",
                "/worker/"
            ],
            "coveragePathIgnorePatterns": [
                "/node_modules/",
                "src/worker/"
            ],
            "globals": {
                "ts-jest": {
                    "tsConfig": "./configs/tsconfig.test.2047.json"
                }
            }
        },
        {
            "displayName": "test:worker",
            "rootDir": ".",
            "roots": [
                "<rootDir>"
            ],
            "modulePaths": [
                "<rootDir>"
            ],
            "transform": {
                "^.+\\.ts$": "ts-jest"
            },
            "testPathIgnorePatterns": [
                "/node_modules/",
                "/2047/"
            ],
            "coveragePathIgnorePatterns": [
                "/node_modules/",
                "src/2047/"
            ],
            "globals": {
                "ts-jest": {
                    "tsConfig": "./configs/tsconfig.test.worker.json"
                }
            }
        }
    ]
}
